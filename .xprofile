#!/bin/sh

config_pointer() {
	xinput set-prop "${1}" "libinput Tapping Enabled" 0
	xinput set-prop "${1}" "libinput Tapping Drag Enabled" 0
	xinput set-prop "${1}" "libinput Natural Scrolling Enabled" 1
	xinput set-prop "${1}" "libinput Click Method Enabled" 0 1
}

#export GDK_SCALE=2
#export GDK_DPI_SCALE=0.5

#export QT_AUTO_SCREEN_SCALE_FACTOR=1
#export QT_ENABLE_HIGHDPI_SCALING=1
#export QT_SCALE_FACTOR=1
#export QT_SCREEN_SCALE_FACTORS=1
#export QT_FONT_DPI=128

setxkbmap -layout us -variant altgr-intl -option caps:backspace
#xmodmap -e "clear lock"
#xmodmap -e "keycode 22 = Escape"
xmodmap ~/.xmodmaprc

for DEVICE in \
		"SynPS/2 Synaptics TouchPad" \
		"Microsoft Microsoft IntelliMouseÂ® Optical";
do
	config_pointer "${DEVICE}"
done

xset b off

application/pdf; ~/.bin/mutt-launch %s zathura
application/vnd.oasis.opendocument.text; ~/.bin/mutt-launch %s libreoffice
application/vnd.oasis.opendocument.spreadsheet; ~/.bin/mutt-launch %s libreoffice
application/octet-stream; ~/.bin/mutt-launch %s mplayer -quiet
application/vnd.openxmlformats-officedocument.wordprocessingml.document; ~/.bin/mutt-launch %s libreoffice
application/vnd.openxmlformats-officedocument.spreadsheetml.sheet; ~/.bin/mutt-launch %s libreoffice
application/x-sh; ~/.bin/mutt-launch %s gvim -R -n

image/jpeg; ~/.bin/mutt-launch %s feh -x -.
image/png; ~/.bin/mutt-launch %s feh -x -.

text/html; ~/.bin/mutt-launch %s surf
text/html; w3m -dump %s; nametemplate=%s.html; copiousoutput

text/plain; ~/.bin/mutt-launch %s gvim -R -n
